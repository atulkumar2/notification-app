{
  "name": "notification-app",
  "version": "0.2.0",
  "description": "Windows tray notification app with configurable reminders and task list",
  "main": "src/main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build:win": "electron-builder --win nsis",
    "lint": "echo 'No linter configured'"
  },
  "dependencies": {
    "auto-launch": "^5.0.5"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.ak.notificationapp",
    "productName": "Notification App",
    "asar": true,
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "src/assets/notification_icon.ico",
      "uninstallerIcon": "src/assets/notification_icon.ico",
      "installerHeaderIcon": "src/assets/notification_icon.ico",
      "artifactName": "${productName}-Setup-${version}.exe",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "win": {
      "icon": "src/assets/notification_icon.ico",
      "target": ["nsis"],
      "compression": "maximum"
    },
    "electronLanguages": ["en-US"],
    "files": [
      "src/**/*",
      "package.json",
      "!**/*.map"
    ],
    "directories": { "buildResources": "build" }
  }
}
