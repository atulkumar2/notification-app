{
  "name": "notification-app",
  "version": "0.2.0",
  "description": "Windows tray notification app with configurable reminders and task list",
  "main": "src/main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build:win": "electron-builder --win nsis",
    "lint": "echo 'No linter configured'"
  },
  "dependencies": {
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "auto-launch": "^5.0.5"
  },
  "build": {
    "appId": "com.ak.notificationapp",
    "productName": "Notification App",
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": false,
      "allowToChangeInstallationDirectory": false
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "directories": { "buildResources": "build" }
  }
}
